    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script type = "text/javascript">
        
        //allow user to search by pressing the enter key 
        function doIt(event) {
              var x = event.keyCode;
              if (x == 13) {  
                enter();
            }
        }
        
        function enter(){
            $.ajax({
                url: "nearby_restaurants", 
                type: "get",     
                data:  $('#zipcode_entered').serialize(), //serialize form and pass to server
                success: function(response) {
                        // display_restaurant_options(response)  
                        // r.innerHTML = response; 
                        document.getElementById("my_list").innerHTML=response;

                    },
                    error: function (stat, err) {
